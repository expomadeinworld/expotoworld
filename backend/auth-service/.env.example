# Auth Service Environment Configuration
# Copy this file to .env and update values for your local environment

# Service
AUTH_PORT=8081
GIN_MODE=release

# Database (Neon - development recommended)
# Fill these from your Neon dev connection string
DB_HOST=your-neon-dev-host
DB_PORT=5432
DB_USER=your_neon_user
DB_PASSWORD=your_neon_password
DB_NAME=your_neon_db
DB_SSLMODE=require

# JWT (must be identical across auth, order, user)
JWT_SECRET=change-me-for-local-dev
JWT_EXPIRATION_HOURS=24

# Email (optional for local via AWS SES SMTP)
AWS_DEFAULT_REGION=eu-central-1
SES_FROM_EMAIL=your-verified-email@domain.com
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Verification & rate limiting
CODE_EXPIRATION_MINUTES=10
MAX_CODE_ATTEMPTS=3
RATE_LIMIT_REQUESTS_PER_HOUR=5
